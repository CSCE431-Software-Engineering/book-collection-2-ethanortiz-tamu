<%= link_to("Back to List", books_path, :class => 'back-link') %>

<div class="books new">
  <h2>Create book</h2>
  <% if flash[:notice].present? %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for(@book) do |f| %>
    <% # url: books_path, method: 'post' %>

    <%= render(partial: 'form', locals: {f: f}) %>

    <div class="form-buttons">
      <%= f.submit("Create book", id: 'Create Book') %>
    </div>

  <% end %>
</div>
